# 环境变量配置示例
# 复制此文件为 .env 并填入实际值

# 数据库配置
DB_URL=jdbc:mysql://localhost:3306/ship_management
DB_USERNAME=root
DB_PASSWORD=your_database_password

# 邮件配置
MAIL_HOST=smtp.resend.com
MAIL_PORT=587
MAIL_USERNAME=resend
MAIL_PASSWORD=your_mail_password

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# 文件上传配置
MAX_FILE_SIZE=50MB
MAX_REQUEST_SIZE=50MB

# Resend 配置
RESEND_API_KEY=your_resend_api_key
RESEND_FROM_EMAIL=your_email@example.com

# S3 对象存储配置
S3_ENDPOINT=https://objectstorageapi.ap-northeast-1.clawcloudrun.com
S3_REGION=ap-northeast-1
S3_ACCESS_KEY=your_access_key
S3_SECRET_KEY=your_secret_key
S3_BUCKET_NAME=your_bucket_name

# Cloudflare Turnstile 配置
CLOUDFLARE_TURNSTILE_SECRET_KEY=your_turnstile_secret_key
CLOUDFLARE_TURNSTILE_URL=https://challenges.cloudflare.com/turnstile/v0/siteverify
